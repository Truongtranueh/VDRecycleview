<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center">
    </ImageView>

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertv"
        android:height="70dp"
        android:hint="     Họ và Tên">
    </EditText>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="70dp"
        android:background="@drawable/bordertv"
        android:hint="     Tuổi">
    </EditText>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edt_emaildk"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="     Nhập địa chỉ Email"
        android:background="@drawable/bordertv"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edt_passworddk"
        android:layout_width="match_parent"
        android:hint="     Nhập mật khẩu"
        android:background="@drawable/bordertv"
        android:layout_height="70dp"
        android:inputType="textPassword" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_dangky"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:backgroundTint="#4C1C1C"
        android:text="Đăng ký" />
    <Button
        android:id="@+id/btn_trovetrangchu"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:backgroundTint="#3B883E"
        android:text="Trở về đăng nhập" />

</LinearLayout>